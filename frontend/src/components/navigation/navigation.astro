---
import NavigationGroup from './navigation-group.astro';

export type Link = {
  href: string;
  label: string;
};
---

<header
  class='w-screen hidden lg:flex top-0 justify-center supports-backdrop-blur:bg-background/60 fixed h-[70px] z-50 bg-background/60 backdrop-blur items-center'
>
  <!-- hidden lg:flex supports-backdrop-blur:bg-background/60 fixed h-[70px] w-[calc(100%-300px)] border-b left-[300px] top-0 z-50 bg-background/60 backdrop-blur items-center -->
  <nav class='container flex items-center justify-between w-full text-text p-8'>
    <h4><a href='/'>Bartek Mieżyński</a></h4>
    <NavigationGroup
      links={[
        { href: '/', label: 'Gorszy Dzień' },
        { href: '/kontakt/', label: 'Kontakt' },
      ]}
    />
  </nav>
</header>
